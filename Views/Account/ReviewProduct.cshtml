@model ProjectShoeShop.Models.Review 

@{
    ViewBag.Title = "Review Product";
    Layout = "~/Views/Account/LayoutAccount.cshtml";
}

<section class="ftco-section" style="padding-top: 50px">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <form action="/Account/ReviewProduct?ProductId=@ViewBag.ProductId&OrderId=@ViewBag.OrderId" method="post" class="billing-form">
                    <h3 class="mb-4 billing-heading">Review</h3>
                    <div class="row align-items-end">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="firstname">Your comment</label>
                                <input type="text" name="Comment" class="form-control" placeholder="">
                            </div>
                        </div>
                        <div class="col-md-6"> 
                            <div class="form-group">
                                <label for="rating">Rating</label>
                                <select name="Rating" style="width: 100px" class="form-group">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                </select>
                                <i class="ion-ios-star" style="color: #dbcc8f"></i>
                            </div>
                        </div>
                    </div>
                    <div class="row align-items-end">
                        <div class="col-4">
                            <button type="submit" class="btn">POST</button>
                        </div>
                    </div>

                    @Html.Action("ReviewPartial", new { productID = ViewBag.ProductId })
                </form>
            </div>
        </div>
    </div>
</section>